@model IEnumerable<QuanLyBaiHat.Models.BaiHat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="row clearfix row-box">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                   Quản Lý Bài Hát
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>@Html.ActionLink("Tạo Bài Hát", "Create")</li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.img)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenBH)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CaSi.TenCS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TacGia.TenTG)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="max-width: 150px">
                                @if(item.img == null)
                                {
                                    <img  class="img-responsive"  src="~/Assets/Admin/img/music.png" />
                                }
                                else
                                {
                                    <img  class="img-responsive" src="@item.img" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenBH)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CaSi.TenCS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TacGia.TenTG)
                            </td>
                            
                            
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaBH }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaBH }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaBH })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>