@model QuanLyBaiHat.Models.TacGia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="row clearfix row-box">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3>Are you sure you want to delete this?</h3>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>@Html.ActionLink("Tạo Bài Hát", "Create")</li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
               
                <div>
                    <div>
                        <h5 style="color:aqua">@Html.DisplayNameFor(model => model.TenTG) : <span style="color:black">@Html.DisplayFor(model => model.TenTG)</span> </h5>

                        <hr />
                        <h5 style="color:aqua">@Html.DisplayNameFor(model => model.Mota):</h5>
                        <p>
                            @Html.Raw(Model.Mota)
                        </p>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>