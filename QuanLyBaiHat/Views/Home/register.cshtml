@model QuanLyBaiHat.Models.User
@{
    ViewBag.Title = "register";
    Layout = "~/Views/Layout/_LayoutSite.cshtml";
}
<div class="row" style="padding: 70px 10px">
    <div class="col-md-12">
        <div class="col-md-6">
            <h2 style="text-align: center">Register</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class = "text-danger">@Html.Raw(ViewBag.error)</div>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label" })
                        
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label" })
                      

                        <input type="password" name="password" class="form-control" />
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        <label class = "control-label" >Confim Password</label>

                        <input type="password" name="repassword" class="form-control" />

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
                       
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-4">
                            <input type="submit" value="Regiser" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6" style="padding-left: 15px">
            <h3 style="text-align: center">Điều Koản</h3>
            <h5>Những điều khoản bạn phải chập nhập khi đăng kí tài khoản của chúng tôi.</h5>  
        </div>
    </div>
</div>
